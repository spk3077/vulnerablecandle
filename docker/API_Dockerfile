FROM maven:latest AS build
EXPOSE 8081
WORKDIR /api
COPY ["../pom.xml", "./"]
COPY ../src .
COPY ../. .
RUN mvn -f /api/pom.xml clean package -Dmaven.test.skip

FROM openjdk:latest
COPY --from=build /api/target/candleshop-0.0.1-SNAPSHOT.jar /usr/local/lib/candle.jar
CMD java -jar /usr/local/lib/candle.jar
